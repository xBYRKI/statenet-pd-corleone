@model statenet_lspd.ViewModels.RankViewModel
@{ bool hasUsers = (bool)ViewBag.HasUsers; }
<div id="deleteRankModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 w-full max-w-md">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Rang löschen</h2>
            <button onclick="document.getElementById('deleteRankModal').classList.add('hidden')" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>
        @if (hasUsers)
        {
            <p class="text-red-600">Dieser Rang kann nicht gelöscht werden, da noch Benutzer damit verknüpft sind.</p>
            <div class="flex justify-end mt-4">
                <button onclick="document.getElementById('deleteRankModal').classList.add('hidden')" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded">Schließen</button>
            </div>
        }
        else
        {
            <p>Sind Sie sicher, dass Sie den Rang '<strong>@Model.Name</strong>' löschen möchten?</p>
            <form asp-action="Delete" method="post" class="mt-4 flex justify-end">
                <input type="hidden" asp-for="Id" />
                <button type="button" onclick="document.getElementById('deleteRankModal').classList.add('hidden')" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded">Abbrechen</button>
                <button type="submit" class="ml-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded">Löschen</button>
            </form>
        }
    </div>
</div>
