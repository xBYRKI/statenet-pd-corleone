@* Views/Instructions/Details.cshtml *@
@model statenet_lspd.Models.ServiceInstruction
@{
    ViewData["Title"] = "Dienstanweisung Details";
}

<div class="max-w-6xl mx-auto mt-10 px-6 py-8 bg-white dark:bg-gray-800 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        <i class="fa-solid fa-eye text-indigo-600 mr-2"></i>
        Dienstanweisung Details
    </h1>

    <div class="prose dark:prose-invert mb-6">
        <h2>@Model.Title</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Gültig ab: @Model.EffectiveDate.ToString("dd.MM.yyyy")</p>
        @Html.Raw(Model.ContentHtml)
    </div>

    <div class="flex space-x-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded shadow">
            <i class="fa-solid fa-pen-to-square mr-2"></i>Bearbeiten
        </a>
        <a asp-action="Index" class="inline-flex items-center bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded shadow">
            <i class="fa-solid fa-arrow-left mr-2"></i>Zur Übersicht
        </a>
    </div>
</div>
