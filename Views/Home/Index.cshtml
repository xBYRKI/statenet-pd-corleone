@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Dashboard";
}

<div class="max-w-7xl mx-auto mt-10 px-6 py-8">
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Angemeldeter User -->
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
            Willkommen, @UserManager.GetUserAsync(User).Result.Displayname! | StateNET LSPD
        </h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-5">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Mitarbeiter</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.UserCount</p>
                    </div>
                    <i class="fa-solid fa-users text-2xl text-indigo-500"></i>
                </div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-5">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Aktive Einheiten</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.RoleCount</p>
                    </div>
                    <i class="fa-solid fa-people-group text-2xl text-green-500"></i>
                </div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-5">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Vergebene Rollen</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">19</p>
                    </div>
                    <i class="fa-solid fa-shield-halved text-2xl text-yellow-500"></i>
                </div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-5">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Log-Einträge</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.AuditLogCount</p>
                    </div>
                    <i class="fa-solid fa-scroll text-2xl text-red-500"></i>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Gast -->
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
            Willkommen Gast!
        </h1>
        <p class="text-gray-700 dark:text-gray-300 mb-6">
            Bitte <a asp-controller="Account" asp-action="Login" class="text-indigo-600 hover:underline">melden Sie sich an</a>, um das Dashboard zu sehen.
        </p>
        <!-- Optional: Einfache Zusammenfassung o.ä. für Gäste -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-5">
            <p class="text-gray-500 dark:text-gray-400">
                Als Gast haben Sie nur eingeschränkten Zugriff. Nach der Anmeldung erhalten Sie vollständige Einsicht in Statistiken und Logs.
            </p>
        </div>
    }
</div>
