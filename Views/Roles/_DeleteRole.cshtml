@model ApplicationRole

<div id="deleteRoleModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 hidden">
    <div class="bg-white dark:bg-gray-900 p-6 rounded-xl w-full max-w-md shadow-xl border border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <i class="fa-solid fa-trash text-red-500"></i>
            Rolle löschen
        </h2>

        @if (ViewBag.UserCount > 0)
        {
            <div class="text-sm text-red-600 dark:text-red-400 mb-4">
                Die Rolle <strong>@Model.Name</strong> kann nicht gelöscht werden, da ihr noch <strong>@ViewBag.UserCount</strong> Benutzer zugewiesen sind.
            </div>

            <div class="flex justify-end pt-2">
                <button type="button" onclick="toggleModal('deleteRoleModal')"
                        class="px-4 py-2 text-sm rounded-md bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white">
                    Schließen
                </button>
            </div>
        }
        else
        {
            <p class="text-sm text-gray-700 dark:text-gray-300 mb-4">
                Möchtest du die Rolle <strong>@Model.Name</strong> wirklich löschen?
            </p>

            <form asp-action="DeleteConfirmed" method="post" class="flex justify-end space-x-3">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="button" onclick="toggleModal('deleteRoleModal')"
                        class="px-4 py-2 text-sm rounded-md bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white">
                    Abbrechen
                </button>
                <button type="submit"
                        class="px-4 py-2 text-sm rounded-md bg-red-600 hover:bg-red-700 text-white shadow">
                    <i class="fa-solid fa-trash mr-1"></i> Löschen
                </button>
            </form>
        }
    </div>
</div>
