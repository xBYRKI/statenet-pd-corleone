@model statenet_lspd.Models.ErrorViewModel

@{
    ViewData["Title"] = "Fehler";
}

<section class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto mt-10">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-red-600 mb-4">Fehler</h1>
        <p class="text-gray-700 text-lg mb-6">Es ist ein unerwarteter Fehler aufgetreten.</p>
        <p>Erwartet: @Model?.ShowRequestId</p>
        @if (Model?.ShowRequestId == true)
        {
            <div class="bg-gray-100 p-4 rounded text-sm text-gray-800 mb-6">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                <p>Diese ID hilft uns, das Problem zu untersuchen.</p>
            </div>
        }

        <a href="/" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded transition">
            Zurück zum Dashboard
        </a>
    </div>

    <div class="mt-10 border-t pt-6 text-sm text-gray-500">
        <h3 class="font-semibold text-gray-700 mb-2">Entwicklungsmodus</h3>
        <p>
            Wenn du mehr über diesen Fehler erfahren möchtest, aktiviere den <strong>Development</strong>-Modus.
            Setze dazu die Umgebungsvariable <code>ASPNETCORE_ENVIRONMENT</code> auf <code>Development</code> und starte die Anwendung neu.
        </p>
    </div>
</section>
