@using Microsoft.AspNetCore.Mvc.Rendering
@model statenet_lspd.Models.EditUserViewModel

<div id="editUserModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 hidden">
  <div class="bg-white dark:bg-gray-900 p-6 rounded-xl w-full max-w-2xl shadow-xl border border-gray-200 dark:border-gray-700">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
      <i class="fa-solid fa-pen-to-square text-blue-500"></i>
      Benutzer bearbeiten
    </h2>
    <form asp-action="Edit" method="post" class="space-y-5">
      <input type="hidden" asp-for="Id" />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label asp-for="UserName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Benutzername</label>
          <input asp-for="UserName" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500" />
        </div>
        <div>
          <label asp-for="Displayname" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Vor- und Nachname</label>
          <input asp-for="Displayname" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div>
          <label asp-for="DiscordId" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Discord-ID</label>
          <input asp-for="DiscordId" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div>
          <label asp-for="Dienstnummer" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Dienstnummer</label>
          <input asp-for="Dienstnummer" readonly class="mt-1 block w-full px-3 py-2 border rounded-md bg-gray-100 dark:bg-gray-700 text-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white cursor-not-allowed" />
        </div>
        <div>
          <label asp-for="Besoldung" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Besoldung</label>
          <input asp-for="Besoldung" type="number" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div>
          <label asp-for="Status" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Status</label>
          <select asp-for="Status" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white">
            <option value="true">Angestellt</option>
            <option value="false">Gek체ndigt</option>
          </select>
        </div>
        <div>
          <label asp-for="Phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Telefon</label>
          <input asp-for="Phone" type="text" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div>
          <label asp-for="FiredAt" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Gek체ndigt am</label>
          <input asp-for="FiredAt" type="date" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div>
          <label asp-for="Birthday" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Geburtstag</label>
          <input asp-for="Birthday" type="date" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div>
          <label asp-for="TotalHours" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Arbeitsstunden</label>
          <input asp-for="TotalHours" class="mt-1 block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Rollen</label>
        <select asp-for="SelectedRoles" asp-items="Model.AllRoles" multiple class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-sm text-gray-900 dark:text-white shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </select>
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">STRG oder CMD gedr체ckt halten zum Mehrfachausw채hlen</p>
      </div>

      <div class="flex justify-end space-x-2 pt-4">
        <button type="button" onclick="toggleModal('editUserModal')" class="px-4 py-2 text-sm rounded-md bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white">
          Abbrechen
        </button>
        <button type="submit" class="px-4 py-2 text-sm rounded-md bg-blue-600 hover:bg-blue-700 text-white shadow">
          <i class="fa-solid fa-floppy-disk mr-1"></i> Speichern
        </button>
      </div>
    </form>
  </div>
</div>
