@using Microsoft.AspNetCore.Identity
@using statenet_lspd.Models
@inject RoleManager<ApplicationRole> RoleManager
@model statenet_lspd.Models.EditUserViewModel


<div id="createUserModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 hidden">
    <div class="bg-white dark:bg-gray-900 p-6 rounded-xl w-full max-w-xl shadow-xl border border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
            <i class="fa-solid fa-user-plus text-green-500"></i>
            Neuer Benutzer
        </h2>

        <form asp-action="Create" method="post" class="space-y-5">
            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Benutzername</label>
                <input asp-for="UserName" class="block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Vor-/Nachname</label>
                <input asp-for="Displayname" class="block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Dienstnummer</label>
                <input asp-for="Dienstnummer" readonly class="block w-full px-3 py-2 border rounded-md bg-gray-100 dark:bg-gray-700 text-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white cursor-not-allowed" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Discord-ID</label>
                <input asp-for="DiscordId" class="block w-full px-3 py-2 border rounded-md bg-white dark:bg-gray-800 text-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Rollen</label>
                <select name="selectedRoles" multiple class="block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-sm text-gray-900 dark:text-white shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    @foreach (var role in RoleManager.Roles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">STRG oder CMD gedrückt halten zum Mehrfachauswählen</p>
            </div>

            <div class="flex justify-end space-x-2 pt-4">
                <button type="button" onclick="toggleModal('createUserModal')" class="px-4 py-2 text-sm rounded-md bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white">
                    Abbrechen
                </button>
                <button type="submit" class="px-4 py-2 text-sm rounded-md bg-green-600 hover:bg-green-700 text-white shadow">
                    <i class="fa-solid fa-floppy-disk mr-1"></i> Speichern
                </button>
            </div>
        </form>
    </div>
</div>
